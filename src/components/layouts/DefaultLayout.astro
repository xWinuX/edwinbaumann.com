---
import Wrapper from "../base/Wrapper.vue";
import TheBody from "../core/TheBody.vue";
import TheNavBar from "../core/TheNavBar.astro";
import TheFooter from "../core/TheFooter.vue";
import TheHeader from "../core/TheHeader.vue";
---

<TheBody>
    <div class="relative w-full p-5 overflow-x-clip">
        <!-- Background -->
        <div class="
        transition opacity-50 gradient -z-10
        before:content-[''] before:-z-10 before:absolute before:top-0 before:right-0 before:bottom-0 before:left-0 before:blur-2xl before:transform before:transform before:scale-110 before:bg-gradient-to-r before:from-emerald-400 before:to-blue-600
        after:content-[''] after:-z-10 after:absolute after:top-0 after:right-0 after:bottom-0 after:left-0 after:bg-inherit
        animate-fadeIn"></div>
        <Wrapper class="m-auto grid grid-cols-1 gap-4 lg:flex">
            <TheHeader/>
            <TheNavBar/>
        </Wrapper>
    </div>
    <main>
        <Wrapper>
            <slot/>
        </Wrapper>
    </main>
    <TheFooter/>
</TheBody>
